{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Both PDFs",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/paper"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false
            }
        },
        {
            "label": "Clean LaTeX Build Files",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/paper"
            },
            "problemMatcher": []
        }
    ]
}